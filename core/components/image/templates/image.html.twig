{% set wrapper_class = [
    'flex',
    css.variables[component.fields.position] ?? 'align-items-start'
] %}
<div class="{{ wrapper_class|css }}">
    {% if image is not empty %}
        {% for id in component.fields.image.split(',') ?? [component.fields.image] %}
            {{ id|responsive_image }}
        {% endfor %}
    {% else %}
        <img src="https://placehold.co/500x500" width="500" height="500" alt="">
    {% endif %}
</div>
